{
  "$schema": "https://biomejs.dev/schemas/1.8.3/schema.json",
  "organizeImports": {
    "enabled": true
  },
  "linter": {
    "enabled": true,
    "rules": {
      "recommended": true,
      "complexity": { "noForEach": "off" },
      "performance": { "noAccumulatingSpread": "off" }
    }
  },
  "formatter": { "enabled": true, "lineWidth": 120, "indentStyle": "space" }
}
